# Kyoboard Production Environment Variables
# Copy this file to .env and fill in your values

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
POSTGRES_USER=kyoboard
POSTGRES_PASSWORD=CHANGE_ME_TO_A_STRONG_PASSWORD
POSTGRES_DB=kyoboard

# This is constructed automatically in docker-compose.yml
# Only set manually if using external database
# DATABASE_URL=postgresql://kyoboard:password@db:5432/kyoboard

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================

# Generate a secure secret: 
# node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=CHANGE_ME_TO_A_64_CHAR_RANDOM_STRING

# Your domain (with https:// for production)
# Used for CORS - must match your actual domain
CLIENT_URL=https://yourdomain.com

# Server port (usually 3000, nginx proxies to this)
PORT=3000

# ===========================================
# OPTIONAL: NGINX CONFIG REMINDER
# ===========================================
# If using Nginx, set CLIENT_URL to your public domain
# Nginx will proxy port 80/443 -> Docker port 3000

# ===========================================
# GOOGLE AUTHENTICATION
# ===========================================
# Get these from https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
# Optional: Set manually if auto-detection fails
GOOGLE_CALLBACK_URL=https://yourdomain.com/api/auth/google/callback
