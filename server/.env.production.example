# Server Configuration
PORT=3000
NODE_ENV=production

# Database - Replace with your DigitalOcean PostgreSQL connection string
DATABASE_URL="postgresql://username:password@your-db-host:25060/defaultdb?sslmode=require"

# JWT Secret - Generate a new one for production!
# Use: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET="REPLACE_WITH_A_64_CHARACTER_RANDOM_STRING"

# Client URL - Your DigitalOcean App URL or custom domain
CLIENT_URL="https://your-app-name.ondigitalocean.app"
